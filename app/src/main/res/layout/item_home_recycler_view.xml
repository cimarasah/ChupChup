<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dp">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        >
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="16dp"
            android:orientation="vertical">
        <TextView
            android:id="@+id/nome_list_home"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="nome"
            android:textSize="@dimen/name_list"
            android:layout_weight="1"
            android:textStyle="bold" />
    <TextView
        android:id="@+id/debito_data_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="data" />
</LinearLayout>
        <TextView
            android:id="@+id/debito_list_home"
            android:layout_width="@dimen/saldo"
            android:layout_height="@dimen/height_item_recycler"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:text="debito"
            android:textSize="@dimen/name_list" />
    </LinearLayout>





</LinearLayout>