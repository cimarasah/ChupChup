<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dp">
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    >

    <TextView
        android:id="@+id/nome_list_client"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/height_item_recycler"
        android:gravity="center_vertical"
        android:text="nome"
        android:textSize="@dimen/name_list"
        android:layout_weight="1"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/saldo_list_client"
        android:layout_width="@dimen/saldo"
        android:layout_height="@dimen/height_item_recycler"
        android:gravity="center_vertical"
        android:layout_weight="1"
        android:text="debito"
        android:textSize="@dimen/name_list" />
</LinearLayout>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center">
    <ImageButton
        android:id="@+id/btn_fin_pend_client"
        android:layout_width="50dp"
        android:layout_height="@dimen/height_item_recycler"
        android:background="@null"
        android:gravity="center"/>

    <ImageButton
        android:id="@+id/btn_edit_client"
        android:layout_width="50dp"
        android:layout_height="@dimen/height_item_recycler"
        android:background="@null"
        android:src="@drawable/ic_edit_black_24dp"
        android:gravity="center"/>

</LinearLayout>
</LinearLayout>